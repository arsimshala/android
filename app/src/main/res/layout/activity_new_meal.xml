<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/back" />

    <EditText
        android:id="@+id/txt_new_meal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:hint="@string/title" />

    <EditText
        android:id="@+id/txt_new_meal_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_new_meal_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:hint="@string/recipe" />

    <EditText
        android:id="@+id/txt_new_meal_number_of_serving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_new_meal_recipe"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:hint="@string/number_of_serving" />

    <EditText
        android:id="@+id/txt_new_meal_preparation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_new_meal_number_of_serving"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:hint="@string/preparation_time" />

    <Button
        android:id="@+id/btn_new_meal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/new_meal" />

</RelativeLayout>

