<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/et_new_meal_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Title"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/et_new_meal_recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Recipe"
        android:layout_below="@id/et_new_meal_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/et_new_meal_number_of_serving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Number of serving"
        android:layout_below="@id/et_new_meal_recipe"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/et_new_meal_preparation_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Preparation time"
        android:layout_below="@id/et_new_meal_number_of_serving"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btn_new_meal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/new_meal"/>
    
</RelativeLayout>

